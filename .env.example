# RSS Comb Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=rss_user
DB_PASSWORD=rss_password
DB_NAME=rss_comb

# Application Configuration
PORT=8080
FEEDS_DIR=./feeds
WORKER_COUNT=5
SCHEDULER_INTERVAL=30

# API Authentication
# Set this to enable /api/ endpoints with authentication
# Use a strong, random key in production (e.g., openssl rand -hex 32)
# API_ACCESS_KEY=your-secret-key-here
API_ACCESS_KEY=

# Gin Mode (development, release, test)
GIN_MODE=release

# Optional: Custom Docker image tag
# IMAGE_TAG=v1.0.0