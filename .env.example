# RSS Comb Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=rss_user
DB_PASSWORD=rss_password
DB_NAME=rss_comb

# Redis Configuration
REDIS_ADDR=localhost:6379

# Application Configuration
PORT=8080
FEEDS_DIR=./feeds
WORKER_COUNT=5
SCHEDULER_INTERVAL=30

# Gin Mode (development, release, test)
GIN_MODE=release

# Optional: Custom Docker image tag
# IMAGE_TAG=v1.0.0